  height: 46rpx;
} */

.detail_text_list text:nth-child(2){
  width: 384rpx;
  
}
.detail_text_list text:nth-child(3){
  width: 96rpx;
  text-align: center;
}
.detail_text_list.header text:nth-child(1){
  font-weight:normal;
  color:rgba(187,187,187,1);
}
.detail_text_list text:nth-child(1){
  font-weight:500;
  color:rgba(153,153,153,1);
}
.empty{
  text-align: center;
  font-size: 24rpx;
  margin-top: 150rpx;
  color: #ccc;
  font-weight: normal;
}

