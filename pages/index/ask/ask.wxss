page{
  width: 100%;
  background: #FAFAFA;
}
.nav{
  width: 670rpx;
  overflow: hidden;
  margin: 0 auto;
  padding: 0 40rpx;
  background: #fff;
}
.nav_list{
  width: 33%;
  float: left;
  text-align: center;
}
.nav_name{
  font-size: 30rpx;
  color: #bbb;
  height: 74rpx;
  line-height: 74rpx;
}
.nav_list.cli .nav_icon{
  width: 50rpx;
  height: 6rpx;
  background:#6C79FB ;
  border-radius: 16rpx;
  margin: 0 auto;
}
.nav_list.cli .nav_name{
  color: #222;
}
.header{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  overflow: hidden;
}
.header_tit{
  height:44rpx;
  font-size:32rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
  line-height:44rpx;
  margin-bottom: 40rpx;
}
.header_left{
  width: 50%;
  float: left;
}
.header_right{
  width: 50%;
  float: left;
}
.header_left image{
  width: 72rpx;
  height: 64rpx;
  float: left;
  margin: 48rpx 0 0 36rpx;
}

.left_tit{
  font-size: 20rpx;
  color: #999;
  margin-top: 40rpx;
}
.left_num{
  color: #6C79FB;
  font-size: 32rpx;
  font-weight: 600;
}
.header_left .text{
  float: left;
  margin-left: 28rpx;
}
.teacher_list{
  width: 610rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow:0px 0px 8rpx 0px rgba(221,221,221,1);
  border-radius:16rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 20rpx;
}
.headImg{
  width: 90rpx;
  height:90rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.teacher_text{
  width: 500rpx;
  float: left;
  font-size:32rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
 
}
.teacher_name{
  width: 350rpx;
  float: left;
  height: 44rpx;
  line-height: 44rpx;
}
.teacher_detail{
  width: 150rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(108,121,251,1);
  float: right;
  text-align: right;
}
.text_center{
  clear: both;
  overflow: hidden;
}
.teacher_data{
  font-size:21rpx;
  font-weight:400;
  margin-top: 6rpx;
  color:rgba(153,153,153,1);
  width: 125rpx;
  float: left;
}
.teacher_data text{
  color:#222222;
}
.text_footer{
  display: block;
  clear: both;
  font-size:24rpx ;
  color: #999999;
  height: 34rpx;
  line-height: 34rpx;
  font-weight: normal;
}
.main{
  margin-top: 48rpx;
  overflow: hidden;
  clear: both;
  padding-bottom: 20rpx;
}
.teacher_list.cli{
  background: url(https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/storeManagement/yhd13132123.png) no-repeat 554rpx 0;
  background-size: 88rpx 40rpx;
}
.noData{
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
  color: #ccc;
  font-size: 24rpx;
}
