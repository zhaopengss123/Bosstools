/**index.wxss**/
page{
  width: 100%;
  min-height: 100%;
  background: #FAFAFA;

}
.content{
  width: 670rpx;
  overflow: hidden;
  margin: 0 auto;
}
image{
  width: 100%;
  height: 100%;
}
.banner{
  width: 100%;
  height: 284rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.total{

  overflow: hidden;
  margin-top: 40rpx;
}
.total_tit{
  color: #222;
  font-weight: bold;
  font-size: 32rpx;
  float: left;
  overflow: hidden;
}
.total_top{
  overflow: hidden;
}
.total_icon{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: #bbb;
  float: left;
  font-size: 30rpx;
  border: solid 1rpx #bbb;
  border-radius: 20rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-top: 5rpx;
  overflow: hidden;

}
.total_list{
  width: 100%;
  clear: both;
  height: 234rpx;
  overflow-x: scroll;
  margin-top: 20rpx;
}


/* 老师模块 */
.teacher{
  margin-top: 40rpx;
  padding-bottom: 30rpx;
}
.teacher_tit{
  color: #222;
  font-weight: bold;
  font-size: 32rpx;
  overflow: hidden;  

}
.teacher_list{
  width: 610rpx;
  height: 134rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow:0px 0px 8rpx 0px rgba(221,221,221,1);
  border-radius:16rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.headImg{
  width: 90rpx;
  height:90rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.teacher_text{
  width: 500rpx;
  float: left;
  font-size:32rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
  margin-left: 20rpx;
}
.teacher_name{
  width: 350rpx;
  float: left;
  height: 44rpx;
  line-height: 44rpx;
}
.teacher_detail{
  width: 150rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(108,121,251,1);
  float: right;
  text-align: right;
}
.text_center{
  clear: both;
  overflow: hidden;
}
.teacher_data{
  font-size:21rpx;
  font-weight:400;
  margin-top: 6rpx;
  color:rgba(153,153,153,1);
  width: 166rpx;
  float: left;
}
.teacher_data text{
  color:#222222;
}
.text_bottom{
  width: 228rpx;
  height: 38rpx;
  color: #fff;
  background: #FF5E86;
  text-align: center;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  margin-top: 8rpx;
  font-weight: normal;
}
.total_explain{
  width: 610rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999999;
  overflow: hidden;
  margin: 40rpx 0;
  padding: 30rpx;
  background: #F5F5F5;
  border-radius: 15rpx;
}

.total_explain text{
    float: left;
}
.total_explain text:nth-child(1){
    width: auto;
    color: #222;
}
.total_explain text:nth-child(2){
    width: 510rpx;
}

.total_explain view{
  margin-bottom: 10rpx;
}
.text_footer{
  font-size:24rpx ;
  color: #999999;
  height: 34rpx;
  line-height: 34rpx;
  font-weight: normal;
}
.navigator-hover {
  color: rgba(108,121,251,1);
  background: none;
}

.slist{
  float: left;
  width: 336rpx;
  background: url(https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/storeManagement/bg_dsadsad.png) no-repeat;
  background-size:100% 100%; 
  height: 234rpx;
  padding: 0 28rpx;
  margin-right: 20rpx;
}
.slist:nth-child(4){
  padding-right: 0;
}
.slist text:nth-child(1){
  text-align: left;
  color: #222;
  font-size: 24rpx;
  margin-top: 44rpx;
  width: 100%;
  display: block;
}
.slist text:nth-child(2){
  width: 100%;
  text-align: left;
  color: #999;
  font-size: 24rpx;
  margin-top: 2rpx;
  display: block;
}
.slist text:nth-child(3){
  width: 100%;
  text-align: left;
  color: #6C79FB;
  font-size: 36rpx;
  margin-top: 20rpx;
  display: block;
  height: 50rpx;
  line-height: 50rpx;
}