page{
  background: #FAFAFA;
}
.content{
  padding-top: 20rpx;
}
image{
  width:100%;
  height: 100%;
}
.teacher_list{
  width: 610rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow:0px 0px 8rpx 0px rgba(221,221,221,1);
  border-radius:16rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 20rpx;
}
.headImg{
  width: 90rpx;
  height:90rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.teacher_text{
  width: 500rpx;
  float: left;
  font-size:32rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
 
}
.teacher_name{
  width: 350rpx;
  float: left;
  height: 44rpx;
  line-height: 44rpx;
}
.teacher_detail{
  width: 150rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(108,121,251,1);
  float: right;
  text-align: right;
}
.text_center{
  clear: both;
  overflow: hidden;
}
.teacher_data{
  font-size:21rpx;
  font-weight:400;
  margin-top: 6rpx;
  color:rgba(153,153,153,1);
  width: 125rpx;
  float: left;
}
.teacher_data text{
  color:#222222;
}
.text_footer{
  display: block;
  clear: both;
  font-size:24rpx ;
  color: #999999;
  height: 34rpx;
  line-height: 34rpx;
  font-weight: normal;
}
.noData{
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #ccc;
  font-size: 24rpx;
}
.noData{
  color: #ccc;
  text-align: center;
  padding-top: 300rpx;
  font-size: 36rpx;
}
